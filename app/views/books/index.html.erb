<h2>Books</h2>

<% @books.each do |book| %>

<p>Title</p>
<span>
  <%= link_to book.title,book_path(book.id) %>
</span>

<% end %>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>body</th>
        </tr>
    </thead>

    <tbody>
        <% @books.each do |book| %>
        <tr>
            <tb><%= book.title %></tb>
            <tb><%= book.body %></tb>
            <tb><%= link_to 'show',book_path(params[:id]) %></tb>
            <tb><%= link_to 'Edit',edit_book_path(params[:id] ) %></tb>
            <tb><%= link_to "Destroy", destroy_book_path(@book.id),method: :delete,"data-confirm" => "本当に削除しますか？" %></tb>
        </tr>
        <% end %>
</table>